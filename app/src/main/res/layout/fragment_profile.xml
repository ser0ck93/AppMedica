<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/fondo_final">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/profile_fragment_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/default_margin"
    app:srcCompat="@drawable/doc"
    app:strokeColor="@color/primary"
    app:strokeWidth="3dp"
    android:scaleType="fitXY"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.4BB4G10.Body1"
        android:textColor="@color/white"
        tools:text="JUAN SEBASTIAN FONSECA TORO"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.4BB4G10.Body1"
        android:textColor="@color/white"
        tools:text="setor1609@hotmail.com"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/Theme.4BB4G10.Body1"
        android:textColor="@color/white"
        tools:text="Masculino"/>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_fragment_log_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>