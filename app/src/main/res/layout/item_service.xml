<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/item_service_icon"
    app:layout_constraintTop_toTopOf="@id/item_service_title"
    app:layout_constraintBottom_toBottomOf="@id/item_service_description"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginVertical="@dimen/small_margin"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_width="@dimen/service_icon_size"
    android:layout_height="@dimen/service_icon_size"
    app:srcCompat="@drawable/cruz"/>
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_service_icon"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/default_margin"
        tools:text="General"
        android:textAppearance="@style/Theme.4BB4G10.Body1"
        android:textColor="@color/primaryLigth"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/item_service_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/item_service_title"

        tools:text="Los mejores especialistas en medicina general."
        android:textAppearance="@style/Theme.4BB4G10.Body2"
        />

    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/item_service_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="0dp"
        android:layout_height="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>