<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prueba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/primaryText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryText</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/secondaryText</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Mintic.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Mintic.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Mintic.Large</item>
        <item name="textAppearanceButton">@style/Theme.4BB4G10.TextAppearanceButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Prueba.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Prueba.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Prueba.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.Mintic.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">

        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>

    </style>
    <style name="ShapeAppearance.Mintic.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.Mintic.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">

        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.4BB4G10.TextAppearanceButton" parent="Widget.MaterialComponents.Button">

        <item name="fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="Theme.4BB4G10.Body1" parent="TextAppearance.MaterialComponents.Body1">

        <item name="fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="textAllCaps">true</item>

    </style>

</resources>